{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}


    <div class="container">
        <div class="row mt-4">
            <div class="col-sm">
            </div>
            <div class="col-sm">
               <div class="info-login-header mt-3 mb-3">
                   <h2 class="h2 mb-2 font-weight-normal">Se connecter</h2>
                   <p>Pas encore de compte ? <a href="#">Cr√©ez un compte</a></p>
               </div>
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <label for="inputUsername">Username</label>
                    <br>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                    <label class="mt-3" for="inputPassword">Password</label>
                    <br>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    #}

                    <button class="btn btn-info btn-lg btn-block btn-login-page mt-4" type="submit">
                        Connecte moi!!!!!!!
                    </button>
                </form>
            </div>
            <div class="col-sm">
            </div>
        </div>
    </div>




{% endblock %}
